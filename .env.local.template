# Database URL (update with your PostgreSQL connection string)
DATABASE_URL="postgresql://user:password@localhost:5432/performance_mgmt"

# Auth Configuration
AUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"
AUTH_URL="http://localhost:3000"

# Email Configuration (Resend)
EMAIL_PROVIDER=resend
EMAIL_API_KEY=your-resend-api-key-here
EMAIL_FROM=Performance Management <onboarding@resend.dev>

# AI Configuration (OpenAI)
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_BASE_URL=https://api.openai.com/v1

# Object Storage (AWS S3)
STORAGE_PROVIDER=s3
STORAGE_ENDPOINT=https://s3.amazonaws.com
STORAGE_BUCKET=your-bucket-name
STORAGE_ACCESS_KEY=your-aws-access-key-id
STORAGE_SECRET_KEY=your-aws-secret-access-key
STORAGE_REGION=us-east-1

# App Configuration
APP_NAME="Performance Management Tool"
APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MS=900000
RATE_LIMIT_RESET_MAX=3
RATE_LIMIT_RESET_WINDOW_MS=3600000

# Session Configuration
SESSION_MAX_AGE=21600
